startup_message off
vbell off

altscreen on

termcapinfo xterm* ti@:te@
term xterm-256color

hardstatus alwayslastline "%{= gk}[%m/%d %02c] %{gW} %-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] (%l) "

encoding utf-8 utf-8

defscrollback 10000
defutf8 on
defbce on
defkanji utf-8
defencoding utf-8

escape ^Tt
bind z title
